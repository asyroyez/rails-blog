<div class="App">
  <div class="container mx-auto px-4">
    <section class="py-10">
      <h2 class="text-3xl font-bold text-center mb-6">Services</h2>
      <div class="grid grid-cols-3 gap-4">
        <% @services.each do |service| %>
        <div class="card">
          <h3 class="text-xl font-bold">
            <%= link_to service.name, service_path(service) %>
          </h3>
          <p><%= service.description %></p>
        </div>
        <% end %>
      </div>
    </section>
    <section class="py-10">
      <h1 class="text-3xl font-bold text-center mb-6">From The Blog</h1>

      <h2 class="text-2xl font-bold text-center mb-4">Latest Posts</h2>
      <div class="grid grid-cols-3 gap-4">
        <% @latest_blog_posts.each do |blog_post| %>
        <div class="card">
          <%= link_to blog_post_path(blog_post) do %> <% if
          blog_post.thumbnail.attached? %>
          <img
            class="w-full h-64 object-cover"
            src="<%= url_for(blog_post.thumbnail) %>"
            alt="<%= blog_post.title %>"
          />
          <% else %> <%= image_tag("thumbnail-placeholder.jpg", class: "w-full
          h-64 object-cover", alt: "Placeholder image") %> <% end %>
          <h2 class="text-xl font-bold mt-4"><%= blog_post.title %></h2>
          <p><%= blog_post.body.to_plain_text.truncate(100) %></p>
          <% end %>
        </div>
        <% end %>
      </div>

      <h2 class="text-2xl font-bold text-center mb-4 mt-10">Featured Posts</h2>
      <div class="grid grid-cols-3 gap-4">
        <% @featured_blog_posts.each do |blog_post| %>
        <div class="card">
          <%= link_to blog_post_path(blog_post) do %> <% if
          blog_post.thumbnail.attached? %>
          <img
            class="w-full h-64 object-cover"
            src="<%= url_for(blog_post.thumbnail) %>"
            alt="<%= blog_post.title %>"
          />
          <% else %> <%= image_tag("thumbnail-placeholder.jpg", class: "w-full
          h-64 object-cover", alt: "Placeholder image") %> <% end %>
          <h2 class="text-xl font-bold mt-4"><%= blog_post.title %></h2>
          <p><%= blog_post.body.to_plain_text.truncate(100) %></p>
          <% end %>
        </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
